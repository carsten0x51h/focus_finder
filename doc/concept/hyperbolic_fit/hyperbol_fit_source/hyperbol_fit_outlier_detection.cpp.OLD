/**********************************************************************
 * Main
 **********************************************************************/
int main(int argc,  char** argv) {

  typedef bg::model::d2::point_xy<float> DataPointT;
  typedef std::vector<DataPointT> DataPointContainerT;

  // Check argument
  if (argc != 2) {
    std::cout << "Usage: hyperbol_fit <path/to/datafile>" << std::endl;
    return -1;
  }
  
  std::string filename(argv[1]);
  
  // Fill data container with some hyperbol shaped data
  DataPointContainerT dataPointsToFit;

  // Read data file
  std::ifstream infile(filename);
  float x, y;
  while (infile >> x >> y) {
    dataPointsToFit.push_back(DataPointT(x,y));
  }


  // TODO: Move to sep. function..
  typedef CurveFitTmplT<HyperbolFitTraitsT, DataPointContainerT> HyperbolMatcherT;
  typedef HyperbolMatcherT::CurveParamsT CurveParamsT;
    
  CurveParamsT::TypeT hyperbolCurveParms;
  
  size_t numOutliers = 0;
  size_t numTotalOutliers = 0;
  size_t numIterations = 0;
  
  DataPointContainerT dataToFit;

  float maxOutliersPerc = 20.0f; // 20%
  size_t numInitialDataPoints = dataPointsToFit.size();
  size_t numMinRequiredDataPoints = numInitialDataPoints * (1.0 - maxOutliersPerc / 100.0);
  
  std::cout << "numInitialDataPoints: " << numInitialDataPoints << ", maxOutliersPerc: " << maxOutliersPerc << "% -> numMinRequiredDataPoints: " << numMinRequiredDataPoints << std::endl;


  size_t maxNumDataPointsToBeRemoved = 5;

  
  do {
    // Do the LM fit
    ++numIterations;
    
    // Return value of fitGslLevenbergMarquart() is not evaluated here...
    HyperbolMatcherT::fitGslLevenbergMarquart(dataPointsToFit, & hyperbolCurveParms, 0.1f /*EpsAbs*/, 0.1f /*EpsRel*/);

    // Detect and remove outliers
    auto modelFunction = [&] (float x) { return HyperbolFitTraitsT::fx(x, hyperbolCurveParms); };


    
    numOutliers = detectAndRemoveOutliers(dataPointsToFit, modelFunction, & dataPointsToFit, maxNumDataPointsToBeRemoved, 3.0 /*fac*/); // Write result to same vector
    numTotalOutliers += numOutliers;

    maxNumDataPointsToBeRemoved -= numOutliers;
    
    std::cout << "numTotalOutliers detected: " << numTotalOutliers << std::endl;
    
  } while(numOutliers > 0 && maxNumDataPointsToBeRemoved > 0);

  if (dataPointsToFit.size() < numMinRequiredDataPoints) {
    std::cerr << "Not enough data points with sufficient model accuracy. Require at least " << numMinRequiredDataPoints << " datapoints but only have " << dataPointsToFit.size() << " / " << numInitialDataPoints << "." << std::endl;
    return 1;
  }


  // Print calculated curve parameters
  std::cout << "a=" << hyperbolCurveParms[CurveParamsT::A_IDX] << std::endl
	    << "b=" << hyperbolCurveParms[CurveParamsT::B_IDX] << std::endl
	    << "c=" << hyperbolCurveParms[CurveParamsT::C_IDX] << " (opt. position)" << std::endl
	    << "d=" << hyperbolCurveParms[CurveParamsT::D_IDX] << std::endl;
  
  return 0;
}
